<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activity.admin.ChatsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="20dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="الموظفين"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                android:id="@+id/chats_employees"
                android:textAlignment="center"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/toolbar_img"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bill"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="10dp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user_compeleted"
                    android:layout_alignParentStart="true"
                    android:layout_margin="10dp"
                    />


                />
            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="-5dp"
                android:layout_marginBottom="5dp"
                app:contentPadding="0dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#FFF"
                        >


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="المحادثات"
                            android:layout_marginStart="10sp"
                            android:layout_alignParentStart="true"
                            android:textColor="#98015B"
                            android:padding="10dp"
                            android:textSize="10sp"
                            android:id="@+id/chats_total_chat"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11"
                            android:layout_marginEnd="10sp"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/text_color"
                            android:padding="10dp"
                            android:textSize="10sp"
                            android:id="@+id/chats_total_chat_numbers"
                            />

                        />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ccc"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        ></LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="اخر محادثة"
                        android:layout_marginStart="10dp"
                        android:textSize="8sp"
                        android:textColor="@color/text_color"
                        android:id="@+id/chats_last_chat"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Safaa Ahmed"
                        android:id="@+id/first_notification"
                        android:textSize="8sp"
                        android:textColor="@color/text_color"
                        android:layout_margin="10dp"
                        />



                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="العملاء"
                android:id="@+id/customers"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                android:textAlignment="center"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/toolbar_img"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bill"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="10dp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user_loading"
                    android:layout_alignParentStart="true"
                    android:layout_margin="10dp"
                    />


                />
            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="2dp"
                app:cardElevation="2dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="-5dp"
                android:layout_marginBottom="5dp"
                app:contentPadding="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#FFF"
                        >


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="الاجمالى"
                            android:layout_marginStart="10sp"
                            android:layout_alignParentStart="true"
                            android:textColor="#98015B"
                            android:padding="10dp"
                            android:textSize="10sp"
                            android:id="@+id/chats_total_customers"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8"
                            android:layout_marginEnd="10sp"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/text_color"
                            android:padding="10dp"
                            android:textSize="10sp"
                            android:id="@+id/chats_total_customers_numbers"
                            />

                        />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ccc"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        ></LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="اخر اشعار"
                        android:layout_marginStart="10dp"
                        android:textSize="8sp"
                        android:textColor="@color/text_color"
                        android:id="@+id/chats_last_noti"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-شركة ارجاء"
                        android:id="@+id/user_chat"
                        android:textSize="8sp"
                        android:textColor="@color/text_color"
                        android:layout_margin="10dp"
                        />



                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>